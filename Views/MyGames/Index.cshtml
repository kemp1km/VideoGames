@model IEnumerable<VideoGames.Models.MyGames>

@{
    ViewData["Title"] = "Index";
}

<h1>My Video Games</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReviewGrade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReviewGrade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Review)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReviewDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Game.GameId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MyGamesId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MyGamesId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MyGamesId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
